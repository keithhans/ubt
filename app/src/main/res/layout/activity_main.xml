<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visbot控制"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- 连接状态 -->
        <Button
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="连接Master"
            android:textSize="12sp"
            android:padding="4dp" />

        <!-- 舵机控制区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="舵机控制"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_servo_angle"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="角度"
                android:textSize="12sp"
                android:padding="4dp"
                android:inputType="numberSigned|numberDecimal" />

            <EditText
                android:id="@+id/et_servo_speed"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:hint="速度"
                android:textSize="12sp"
                android:padding="4dp"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/btn_servo_rotate"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="旋转"
                android:textSize="12sp"
                android:padding="2dp" />

            <Button
                android:id="@+id/btn_servo_center"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="归中"
                android:textSize="12sp"
                android:padding="2dp" />

        </LinearLayout>

        <!-- 移动控制区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="移动控制"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/et_move_speed"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:hint="速度(0-100)"
            android:textSize="12sp"
            android:padding="4dp"
            android:inputType="numberDecimal"
            android:text="50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/btn_move_forward"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="前进"
                android:textSize="12sp"
                android:padding="2dp" />

            <Button
                android:id="@+id/btn_move_backward"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="后退"
                android:textSize="12sp"
                android:padding="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/btn_turn_left"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="左转90°"
                android:textSize="12sp"
                android:padding="2dp" />

            <Button
                android:id="@+id/btn_turn_right"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="右转90°"
                android:textSize="12sp"
                android:padding="2dp" />

        </LinearLayout>

        <!-- 停止按钮 -->
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:text="紧急停止"
            android:textSize="12sp"
            android:padding="2dp"
            android:backgroundTint="#F44336" />

        <!-- 状态显示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态日志"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:text="等待连接..."
            android:textSize="10sp"
            android:background="#F5F5F5"
            android:padding="4dp"
            android:fontFamily="monospace" />

    </LinearLayout>

</ScrollView>

