<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visbot控制"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="4dp" />

    <!-- 主控制区域 -->
    <LinearLayout
        android:id="@+id/layout_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 左侧：移动控制十字 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp">

            <!-- 前进按钮 -->
            <Button
                android:id="@+id/btn_move_forward"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:text="前进"
                android:textSize="14sp" />

            <!-- 左转按钮 -->
            <Button
                android:id="@+id/btn_turn_left"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/btn_move_forward"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="左转"
                android:textSize="14sp" />

            <!-- 停止按钮 -->
            <Button
                android:id="@+id/btn_stop"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/btn_move_forward"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="停止"
                android:textSize="14sp"
                android:backgroundTint="#F44336" />

            <!-- 右转按钮 -->
            <Button
                android:id="@+id/btn_turn_right"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/btn_move_forward"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:text="右转"
                android:textSize="14sp" />

            <!-- 后退按钮 -->
            <Button
                android:id="@+id/btn_move_backward"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/btn_stop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="后退"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- 右侧：舵机控制竖排 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <!-- 抬头按钮 -->
            <Button
                android:id="@+id/btn_head_up"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="抬头"
                android:textSize="14sp" />

            <!-- 归中按钮 -->
            <Button
                android:id="@+id/btn_servo_center"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:text="归中"
                android:textSize="14sp" />

            <!-- 低头按钮 -->
            <Button
                android:id="@+id/btn_head_down"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:text="低头"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 状态显示 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_controls"
        android:layout_marginTop="8dp"
        android:minHeight="40dp"
        android:maxHeight="80dp"
        android:text="等待连接..."
        android:textSize="9sp"
        android:background="#F5F5F5"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:fontFamily="monospace" />

</RelativeLayout>

